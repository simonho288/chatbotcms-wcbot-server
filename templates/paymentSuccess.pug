//- This PUG template generates checkout web page.
//- See makeWebPage.js checkout() for the logic.
doctype html
html(lang="en")
  head
    include head.pug
  body
    h1.ui.center.aligned.header Payment Success
    h3.ui.center.aligned.header Thank You for your purchase
    .ui.container
      .ui.segments
        .ui.segment paymentId = #{paymentId}
      button.ui.primary.button#btn_close Close this Browser
  script.
    $('#btn_close').on('click', function(evt) {
      window.open('', '_self').close()
    })
